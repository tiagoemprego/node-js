<!DOCTYPE HTML>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<title>Portal de notícias</title>
	<!-- JQuery -->
	<script src="js/jquery-2.2.1.js"></script>
	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">
	<!-- favicon -->
	<link rel="shortcut icon" href="images/favicon.ico" />
</head>
<body>
<nav class="navbar navbar-default navbar-static-top">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<img src="images/logo.png" />
		</div>
		<div id="navbar" class="navbar-collapse collapse">
			<ul class="nav navbar-nav navbar-right">
				<li><a href="index.html">HOME</a></li>
			</ul>
		</div>
	</div>
</nav>
<div class="container">
	<% if(validacao.length > 0){%>
		<div class="row">
			<div class="col-md-12">
				<div class="alert alert-danger">
					<strong>Atenção!</strong>
					<ul>
						<% validacao.forEach(function(error){%>
							<li><%= error.msg %></li>
						<% });%>
					</ul>
				</div>
			</div>
		</div>
	<% }%>
	<div class="row">
		<div class="col-md-12">
			<form action="/noticias/salvar" method="post">
				<div class="form-group">
					<label for="titulo">Titulo</label>
					<input type="text" class="form-control" id="titulo" name="titulo" value="<%=noticia.titulo%>" placeholder="titulo da notíocia">
				</div>
				<div class="form-group">
					<label for="resumo">Resumo</label>
					<input type="text" class="form-control" id="resumo" name="resumo" value="<%=noticia.resumo%>" placeholder="Resumo da notíocia">
				</div>
				<div class="form-group">
					<label for="autor">Nome do autor</label>
					<input type="text" class="form-control" id="autor" name="autor" value="<%=noticia.autor%>" placeholder="Autor da notíocia">
				</div>
				<div class="form-group">
					<label for="data_notici">Data dos fatos</label>
					<input type="date" class="form-control" id="data_notici" name="data_notici" value="<%=noticia.dara_notici%>" placeholder="Data da notíocia">
				</div>
				<div class="form-group">
					<label for="noticia">Notícia</label>
					<textarea class="form-control" id="noticia" name="noticia" rows="5" cols="30" placeholder="Conteúdo da notícia"><%=noticia.noticia%></textarea>
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-primary" value="Submit">
				</div>
			</form>
		</div>
	</div>
</div>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
		integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
		crossorigin="anonymous"></script>
</body>
</html>